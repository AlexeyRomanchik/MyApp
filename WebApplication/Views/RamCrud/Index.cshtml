@model IQueryable<WebApplication.Models.Ram>;
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminPanel";
}

<style type="text/css">
    table.dataTable thead .sorting:after,
    table.dataTable thead .sorting:before,
    table.dataTable thead .sorting_asc:after,
    table.dataTable thead .sorting_asc:before,
    table.dataTable thead .sorting_asc_disabled:after,
    table.dataTable thead .sorting_asc_disabled:before,
    table.dataTable thead .sorting_desc:after,
    table.dataTable thead .sorting_desc:before,
    table.dataTable thead .sorting_desc_disabled:after,
    table.dataTable thead .sorting_desc_disabled:before {
        bottom: .5em;
    }
</style>

<table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th class="th-sm">
            Id
        </th>
        <th class="th-sm">
            Название
        </th>
        <th class="th-sm">
            Общий объем памяти
        </th>
        <th class="th-sm">
            Тактовая частота
        </th>
        <th class="th-sm">
            Количество контактов
        </th>
        <th class="th-sm">
            Пропускная способность
        </th>
        <th class="th-sm">
            Напряжение питания
        </th>
        <th class="th-sm">
            Цена
        </th>
        <th class="th-sm">
            Количество на складе
        </th>
        <th class="th-sm">
            Дата добавления
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Product.Name</td>
            <td>@product.TotalMemory</td>
            <td>@product.Frequency</td>
            <td>@product.ContactsNumber</td>
            <td>@product.Throughput</td>
            <td>@product.SupplyVoltage</td>
            <td>@product.Product.Price</td>
            <td>@product.Product.QuantityInStock</td>
            <td>@product.Product.DateAdded</td>
        </tr>
    }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
    });
</script>
