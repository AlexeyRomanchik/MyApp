@model WebApplication.ViewModels.CrudViewModel<Cpu>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminPanel";
}

<div>
    <a href="#" class="btn btn-blue tocart"> Добавить <i class="fas fa-plus-circle" style="padding: 5px"></i></a>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Название</th>
            <th scope="col">Цена</th>
            <th scope="col">Количество на складе</th>
            <th scope="col">Дата добавления</th>
            <th scope="col">Сокет</th>
            <th scope="col">Количество ядер</th>
            <th scope="col">Максимальное количество потоков</th>
            <th scope="col">Базовая тактовая частота</th>
            <th scope="col">Максимальная частота</th>
            <th scope="col">Кэш L2 (MB)</th>
            <th scope="col">Кэш L3 (MB)</th>
            <th scope="col">Поддержка памяти</th>
            <th scope="col">Количество каналов памяти</th>
            <th scope="col">Максимальная частота памяти</th>
            <th scope="col">Расчетная тепловая мощность Вт</th>
            <th scope="col">Редактировать</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
        <tr>
            <td>@product.Id</td>
            <td>@product.Product.Name</td>
            <td>@product.Product.Price</td>
            <td>@product.Product.QuantityInStock</td>
            <td>@product.Product.DateAdded</td>
            <td>@product.Socket</td>
            <td>@product.NumberCores</td>
            <td>@product.MaximumNumberThreads</td>
            <td>@product.BaseClock</td>
            <td>@product.MaximumFrequency</td>
            <td>@product.L2Cache</td>
            <td>@product.L3Cache</td>
            <td>@product.MemorySupport</td>
            <td>@product.NumberMemoryChannels</td>
            <td>@product.MaxMemoryFrequency</td>
            <td>@product.Tdp</td>
            <td>
                <form asp-action="Remove" asp-controller="CpuCrud" asp-route-id="@product.Id" method="post">
                    <button type="submit" class="btn btn-teal tocart">
                        <i class="fas fa-pencil-alt mt-0" style="display: inline; padding: 1px;"></i>
                    </button>
                </form>
            </td>
            <td>
                <form asp-action="Remove" asp-controller="CpuCrud" asp-route-id="@product.Id" method="post">
                    <button type="submit" class="btn btn-red tocart">
                        <i class="far fa-trash-alt mt-0" style="display: inline; padding: 1px;"></i>
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>


<nav class="d-flex justify-content-center wow fadeIn">
    <ul class="pagination pg-blue">
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                   asp-controller="CpuCrud"
                   class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a href="#"
                   class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @{
            var index = 1;
            if (Model.PageViewModel.PageNumber > 3)
            {
                index = Model.PageViewModel.PageNumber - 3;
            }

            for (var i = index; i < Model.PageViewModel.PageNumber; i++)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-controller="CpuCrud"
                       class="page-link">
                        @i
                    </a>
                </li>
            }
        }
        <li class="page-item active">
            <a class="page-link" asp-action="Index"
               asp-route-page="@Model.PageViewModel.PageNumber"
               asp-controller="CpuCrud">
                @Model.PageViewModel.PageNumber
                <span class="sr-only">(current)</span>
            </a>
        </li>
        @{
            var indexNext = Model.PageViewModel.PageNumber + 1;

            for (var i = indexNext; i <= Model.PageViewModel.TotalPages && i < indexNext + 3; i++)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-controller="CpuCrud"
                       class="page-link">
                        @i
                    </a>
                </li>
            }
        }

        @if (Model.PageViewModel.HasNextPage)
        {
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                   asp-controller="CpuCrud"
                   class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</nav>

