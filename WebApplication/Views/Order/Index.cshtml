@model WebApplication.ViewModels.OrderViewModel;
@{
    ViewData["Title"] = "Index";
    Layout = "_StartPage";
}




<main class="mt-5 pt-4">
    <div class="content wow fadeIn">
        <h2 class="my-5 h2 text-center">Оформление заказа</h2>

        <!--Grid row-->
        <div class="row">

            <!--Grid column-->
            <div class="col-md-8 mb-4">

                <!--Card-->
                <div>

                    <!--Card content-->
                    <form class="card-body" asp-action="Add" asp-controller="Order">

                        <!--Grid row-->
                        <div class="row">

                            <!--Grid column-->
                            <div class="col-md-6 mb-2">

                                <!--firstName-->
                                <div class="md-form ">
                                    <input type="text" asp-for="Order.Customer.Name" class="form-control">
                                    <label class="">Имя</label>
                                </div>

                            </div>
                            <!--Grid column-->
                            <!--Grid column-->
                            <div class="col-md-6 mb-2">

                                <!--lastName-->
                                <div class="md-form">
                                    <input type="text" asp-for="Order.Customer.Surname" class="form-control">
                                    <label class="">Фамилия</label>
                                </div>

                            </div>


                        </div>

                        <div class="md-form ">
                            <input type="text" asp-for="Order.Customer.Email" class="form-control">
                            <label class="">Email</label>
                        </div>


                        <div class="md-form ">
                            <input type="text" asp-for="Order.Customer.PhoneNumber" class="form-control">
                            <label class="">Номер телефона</label>
                        </div>

                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
                                   aria-selected="true">Адрес/Форма</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile"
                                   aria-selected="false">Адрес/Карты</a>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <!--address-->
                                <div class="md-form mb-5">
                                    <input id="region" type="text" asp-for="Order.Customer.Address.Region" class="form-control" placeholder="Минская">
                                    <label class="">Область</label>
                                </div>

                                <hr>

                                <div class="row">

                                    <!--Grid column-->
                                    <div class="col-lg-4 col-md-12 mb-4">
                                        <label >Город</label>
                                        <input class="form-control d-block w-100" id="city" type="text" asp-for="Order.Customer.Address.City" placeholder="Минск">
                                    </div>
                                    <div class="col-lg-4 col-md-12 mb-4">
                                        <label>Улица</label>
                                        <input class="form-control d-block w-100" id="street" type="text" asp-for="Order.Customer.Address.Street" placeholder="Ленинская">
                                    </div>
                                    <div class="col-lg-4 col-md-12 mb-4">
                                        <label>Дом/Квартира</label>
                                        <input class="form-control d-block w-100" id="house" type="text" asp-for="Order.Customer.Address.HouseOrFlat" placeholder="кв. 5">
                                    </div>

                                </div>

                            </div>
                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <div id="mop" class="z-depth-1-half map-container-6" style="height: 400px"></div>
                            </div>
                        </div>
                            

                           

                            <hr>

                            <div class="md-form mb-5">
                                <input type="text" asp-for="Order.Customer.Address.Region" class="form-control">
                                <label class="">Пожелания к заказу</label>
                            </div>

                            <hr>

                            <div id="map2"></div>

                            <hr>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>

                    </form>

                </div>
                <!--/.Card-->

            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-4 mb-4">

                <!-- Heading -->
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Ваша корзина</span>
                    <span class="badge badge-secondary badge-pill">@Model.Order.Cart.GetTotalItemsCount()</span>
                </h4>
                <ul class="list-group mb-3 z-depth-1">
                    @foreach (var cartItem in Model.Order.Cart.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between lh-condensed">
                            <div>
                                <h6 class="my-0">Product name</h6>
                                <small class="text-muted">@cartItem.Product.Name</small>
                            </div>
                            <span class="text-muted">$@cartItem.Product.Price</span>
                        </li>
                    }
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (USD)</span>
                        <strong>$@Model.Order.Cart.GetFinalPrice()</strong>
                    </li>
                </ul>
            </div>

        </div>
        <!--Grid row-->

    </div>
</main>

<script type="text/javascript">


</script>