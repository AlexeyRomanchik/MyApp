@model IEnumerable<WebApplication.Models.User>

@{
    ViewData["Title"] = "Список пользователей";
    Layout = "_AdminPanel";
}

<a class="btn btn-primary" asp-action="Create" asp-controller="Users">Добавить пользователя</a>

<table class="table">
    <thead class="grey lighten-2">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Email</th>
        <th scope="col">PhoneNumber</th>
        <th scope="col"></th>
    </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>
                <form asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }

</table>
