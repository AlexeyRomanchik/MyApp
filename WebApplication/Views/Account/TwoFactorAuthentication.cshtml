@model WebApplication.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "TwoFactorAuthentication";
}

<div class="content align-content-center text-center h-100">
    <form class="text-center border border-light  w-50 p-5" asp-action="TwoFactorAuthentication" asp-controller="Account" style="margin: auto; margin-top: 15%">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <p class="h4 mb-4">Sign in</p>

        <label>Введите код отправленный на ваш номер телефона в течении 5 мин. для авторизации</label>
        <input name="code" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="code">
        <input type="hidden" asp-for="Email" value="@Model.Email" />
        <input type="hidden" asp-for="ExternalLogins" value="@Model.ExternalLogins" />
        <input type="hidden" asp-for="Password" value="@Model.Password" />
        <input type="hidden" asp-for="RememberMe" value="@Model.RememberMe" />
        <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />


        <button class="btn btn-info btn-block my-4 w-50" type="submit" style="margin: auto">Sign in</button>




    </form>

