<div class="content align-content-center text-center h-100">
        <form class="text-center border border-light p-5 w-50" asp-action="Register" asp-controller="Account" style="margin: auto; margin-top: 15%">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p class="h4 mb-4">Sign up</p>


            <!-- E-mail -->
            <input type="email" asp-for="Email" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="E-mail">
            <span asp-validation-for="Email" class="text-danger"></span>
            <!-- Password -->
            <input type="password" asp-for="Password" id="defaultRegisterFormPassword" class="form-control" placeholder="Password" aria-describedby="defaultRegisterFormPasswordHelpBlock">

            <span asp-validation-for="Password" class="text-danger"></span>
            <br/>
            <input type="password" asp-for="PasswordConfirm" class="form-control" placeholder="PasswordConfirm" aria-describedby="defaultRegisterFormPasswordHelpBlock">
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
           
            <br />
       

            <!-- Sign up button -->
            <button class="btn btn-info my-4 btn-block  w-50" style="margin: auto" type="submit">Sign in</button>

            <!-- Social register -->
            <!-- Terms of service -->
            

        </form>
</div>

