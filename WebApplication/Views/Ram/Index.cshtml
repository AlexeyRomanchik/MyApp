@model WebApplication.ViewModels.RamViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "_StartPage";
}

<div class="card text-white bg-danger mb-3" style="width: 100%">
    <div class="card-header">Новинки</div>
    <div class="card-body">
        <!--Carousel Wrapper-->
        <div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">

            <!--Indicators-->
            <ol class="carousel-indicators">
                <li data-target="#multi-item-example" data-slide-to="0" class="active"></li>
                @for (var i = 1; i < Model.NewItems.Count / 4; i++)
                {
                    <li data-target="#multi-item-example" data-slide-to="@i"></li>
                }
            </ol>
            <!--/.Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <div class="d-flex align-items-center">
                        <div class="justify-content-center">
                            @for (var i = 0; i < 4 && i < Model.NewItems.Count; i++)
                                {
                                    <div class="card h-100" style="width: 20%">

                                        <!-- Card image -->
                                        <img class="card-img-top" src="@Model.NewItems[i].Product.ImageUrl" alt="Card image cap">

                                        <!-- Card content -->
                                        <div class="card-body">

                                            <!-- Title -->
                                            <h6 class="card-title"><a>@Model.NewItems[i].Product.Name</a></h6>

                                            <!-- Text -->
                                            <p class="card-text">
                                                @Model.NewItems[i].MemoryType.Type, @Model.NewItems[i].TotalMemory, @Model.NewItems[i].Product.Manufacturer.Name
                                            </p>
                                            <!-- Button -->
                                            <a href="#" class="btn btn-primary">Подробнее...</a>
                                        </div>
                                    </div>
                                }
                        </div>
                    </div>
                </div>


                            @for (var i = 4; i < Model.NewItems.Count; i += 4)
                            {
            <div class="carousel-item">
                <div class="d-flex align-items-center">
                    <div class=" justify-content-center">
                        @for (var j = i; j < i + 4 && j < Model.NewItems.Count; j++)
                        {
                            <div class="card h-100" style="width: 20%">

                                <!-- Card image -->
                                <img class="card-img-top"  src="@Model.NewItems[j].Product.ImageUrl" alt="Card image cap">

                                <!-- Card content -->
                                <div class="card-body">

                                    <!-- Title -->
                                    <h6 class="card-title"><a>@Model.NewItems[j].Product.Name</a></h6>

                                    <!-- Text -->
                                    <p class="card-text">
                                        @Model.NewItems[j].MemoryType.Type, @Model.NewItems[j].TotalMemory, @Model.NewItems[j].Product.Manufacturer.Name
                                    </p>
                                    <!-- Button -->
                                    <a href="#" class="btn btn-primary">Подробнее...</a>
                                </div>
                            </div>
                        }
                    </div>
                    </div>
                    </div>

                    }


                </div>
                <!--/.Slides-->

            </div>
                    <!--/.Carousel Wrapper-->
                </div>
</div>
<section class="text-center mb-4">
    @foreach (var product in Model.Rams)
    {
        <div class="card" style="width: 20%">

            <!-- Card image -->
            <img class="card-img-top" src="@product.Product.ImageUrl" alt="Card image cap">

            <!-- Card content -->
            <div class="card-body">

                <!-- Title -->
                <h6 class="card-title"><a>@product.Product.Name</a></h6>

                <!-- Text -->
                <p class="card-text">
                    @product.MemoryType.Type, @product.TotalMemory, @product.Product.Manufacturer.Name
                    @if (product.Product.IsAvailable())
                    {
                    <p>В наличии</p>
                }
                else
                {
                    <p>Нет в наличии</p>
                }
                    </p>
                    <!-- Button -->
                    <a href="#" class="btn btn-primary">Подробнее...</a>
                </div>
            </div>
        }

</section>
<nav class="d-flex justify-content-center wow fadeIn">
    <ul class="pagination pg-blue">
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
                   asp-controller="Ram"
                   class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a href="#"
                   class="page-link" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
        }
        @{
            var index = 1;
            if (Model.PageViewModel.PageNumber > 3)
            {
                index = Model.PageViewModel.PageNumber - 3;
            }

            for (var i = index; i < Model.PageViewModel.PageNumber; i++)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-controller="Ram"
                       class="page-link">@i</a>
                </li>
            }
        }
        <li class="page-item active">
            <a class="page-link" asp-action="Index"
               asp-route-page="@Model.PageViewModel.PageNumber"
               asp-controller="Ram">
                @Model.PageViewModel.PageNumber
                <span class="sr-only">(current)</span>
            </a>
        </li>
        @{
            var indexNext = Model.PageViewModel.PageNumber + 1;

            for (var i = indexNext; i <= Model.PageViewModel.TotalPages && i < indexNext + 3; i++)
            {
                <li class="page-item">
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-controller="Ram"
                       class="page-link">@i</a>
                </li>
            }
        }

        @if (Model.PageViewModel.HasNextPage)
        {
            <li class="page-item">
                <a asp-action="Index"
                   asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
                   asp-controller="Ram"
                   class="page-link" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
        else
        {
            <li class="page-item disabled">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        }
    </ul>
</nav>
